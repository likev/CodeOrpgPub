COMMON_SRCS =	cldm_main.c \
		cldm_manage_metadata.c \
		cldm_read_messages.c \
		cldm_write_records.c \
		cldm_init.c \
		cldm.h

clean::
	$(RM) $(COMMON_SRCS)

cldm_main.c:
	$(CP) $(CONVERT_LDM_DIR)/cldm_main.c .

cldm_manage_metadata.c:
	$(CP) $(CONVERT_LDM_DIR)/cldm_manage_metadata.c .

cldm_read_messages.c:
	$(CP) $(CONVERT_LDM_DIR)/cldm_read_messages.c .

cldm_write_records.c:
	$(CP) $(CONVERT_LDM_DIR)/cldm_write_records.c .

cldm_init.c:
	$(CP) $(CONVERT_LDM_DIR)/cldm_init.c .
